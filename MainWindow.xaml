<Window x:Class="ST10355049_POEPart3_LiamKnipe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10355049_POEPart3_LiamKnipe"
        mc:Ignorable="d"
        Title="Recipe" Height="450" Width="800">
    <Grid>
        <TextBlock Name="WelcomeTextBlock" Text="Welcome to the Recipe Manager!" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" />
        <TextBlock Name="DescriptionTextBlock" Text="This application allows you to add, view, scale, and delete recipes." TextWrapping="Wrap" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50,100,50,0" />
        <Button Name="GoToMenuButton" Content="Go to Menu" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,200,0,0" Click="GoToMenuButton_Click" />
    </Grid>
</Window>
