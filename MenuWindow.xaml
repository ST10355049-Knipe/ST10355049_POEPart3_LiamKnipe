<Window x:Class="ST10355049_POEPart3_LiamKnipe.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10355049_POEPart3_LiamKnipe"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Welcome to Recipe Manager Application" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20"/>
        <StackPanel VerticalAlignment="Center">
            <Button Name="AddRecipeButton" Content="1. Add Recipe" Click="AddRecipeButton_Click"/>
            <Button Name="ViewRecipeButton" Content="2. View Recipe" Click="ViewRecipeButton_Click"/>
            <Button Name="ScaleRecipeButton" Content="3. Scale Recipe" Click="ScaleRecipeButton_Click"/>
            <Button Name="ResetScaleButton" Content="4. Reset Scale" Click="ResetScaleButton_Click"/>
            <Button Name="ClearRecipeButton" Content="5. Clear Recipe" Click="ClearRecipeButton_Click"/>
            <Button Name="ExitButton" Content="6. Exit" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
