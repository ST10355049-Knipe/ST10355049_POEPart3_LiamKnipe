<Window x:Class="ST10355049_POEPart3_LiamKnipe.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="450" Width="800">
    <Grid>
        <Label Content="Select Recipe:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="RecipeComboBox" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="120"/>

        <Label Content="Select Scaling Factor:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="ScalingFactorComboBox" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Width="120"/>

        <Button Name="ScaleButton" Content="Scale" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Width="120" Click="ScaleButton_Click"/>
        <Button Name="ResetButton" Content="Reset Scale" HorizontalAlignment="Left" Margin="10,202,0,0" VerticalAlignment="Top" Width="120" Click="ResetButton_Click"/>
        <Button Content="View Recipe" HorizontalAlignment="Left" Margin="10,168,0,0" VerticalAlignment="Top" Width="120" Click="ViewRecipeButton_Click"/>
    </Grid>
</Window>
